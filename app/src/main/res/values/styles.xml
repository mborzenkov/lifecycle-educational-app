<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- List item header -->
    <style name="ListItemHeader" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemDescription" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="ListItemButton" parent="@style/TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
